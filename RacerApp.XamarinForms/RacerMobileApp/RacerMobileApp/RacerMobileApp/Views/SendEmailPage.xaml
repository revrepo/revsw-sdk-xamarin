<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RacerMobileApp.Views.SendEmailPage">
  <StackLayout Margin="16">
    <Label Text="Email:" VerticalOptions="Center" HorizontalOptions="Start" />
    <Entry  x:Name="addresseeEntry" Keyboard="Email"/>
    <Label Text="Subject:" VerticalOptions="Center" HorizontalOptions="Start" />
    <Entry  x:Name="subjectEntry"/>
    <WebView x:Name="webView" VerticalOptions="FillAndExpand">
    </WebView>
    <Button Text="Send" Clicked="SendEmail" />
  </StackLayout>
 
</ContentPage>