<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RacerMobileApp.Views.HistoryPage"
             Title="History">
  <StackLayout>
    <ListView ItemsSource="{Binding List}" ItemTapped="ListViewItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Margin="16,5,16,5">
              <Label Text="{Binding Uri}"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
      <ListView.Footer>
            <StackLayout>
              <Button IsEnabled="{Binding IsClearHistoryEnabled}" Text="Clear History" Clicked="ClearHistoryBtnClicked"/>
            </StackLayout>
      </ListView.Footer>
    </ListView>
  </StackLayout>
</ContentPage>